<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/leftPic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/leftChat"/>
    <TextView
        android:id="@+id/leftChat"
        android:gravity="start"
        android:textAlignment="textStart"
        android:layout_toRightOf="@id/leftPic"
        android:layout_below="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:minWidth="75dp"
        android:maxWidth="200dp"
        android:text="txt"
        android:textColor="#101010"
        android:textSize="16dp"
        android:background="@drawable/background_glass_left"
        />
    <TextView
        android:id="@+id/date"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="75dp"
        android:text="date"
        android:textColor="#101010"
        android:textSize="16dp"
        android:background="@drawable/background_glass_middle"
        android:layout_marginBottom="30dp"
        />
    <ImageView
        android:id="@+id/rightPic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rightChat"/>
    <TextView
        android:id="@+id/rightChat"
        android:gravity="end"
        android:layout_below="@id/date"
        android:layout_toLeftOf="@id/rightPic"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:minWidth="75dp"
        android:maxWidth="240dp"
        android:text="txt"
        android:textColor="#101010"
        android:textSize="16dp"
        android:background="@drawable/background_glass_right"
        />

</RelativeLayout>
